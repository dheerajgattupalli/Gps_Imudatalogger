<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Start Logging"
            android:id="@+id/button_start"
            android:layout_below="@+id/long_val"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="143sp" />
        <TextView
            android:layout_width="130sp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text=""
            android:id="@+id/time_now"
            android:layout_marginTop="10sp"
            android:gravity="center_horizontal" />

        <TextView
            android:layout_width="130sp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Latitude        :"
            android:id="@+id/lat_head"
            android:layout_marginTop="53sp"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/long_head" />

        <TextView
            android:layout_width="130sp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Longitude     :"
            android:id="@+id/long_head"
            android:layout_marginTop="38sp"
            android:layout_below="@+id/lat_head"
            android:layout_toStartOf="@+id/button_start" />
        <TextView
            android:layout_width="130sp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Accuracy      :"
            android:id="@+id/accuracy_head"
            android:layout_marginTop="38sp"
            android:layout_below="@+id/long_head"
            android:layout_alignStart="@+id/long_head" />
        <TextView
            android:layout_width="130sp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Angle             :"
            android:id="@+id/angle_head"
            android:layout_marginTop="38sp"
            android:layout_below="@+id/accuracy_head"
            android:layout_alignStart="@+id/accuracy_head" />

        <TextView
            android:layout_width="110sp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="-"
            android:id="@+id/lat_val"
            android:gravity="center"
            android:layout_alignTop="@+id/lat_head"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="110sp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="-"
            android:id="@+id/long_val"
            android:gravity="center"
            android:layout_alignTop="@+id/long_head"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="110sp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="-"
            android:id="@+id/acc_val"
            android:gravity="center"
            android:layout_alignTop="@+id/accuracy_head"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="110sp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="-"
            android:id="@+id/angle_val"
            android:layout_alignTop="@+id/angle_head"
            android:gravity="center"
            android:layout_centerHorizontal="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="stop and save"
            android:id="@+id/button_stop"
            android:layout_below="@+id/button_start"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>
    <ListView
        android:id="@+id/navList"
        android:layout_width="200sp"
        android:layout_height="match_parent"
        android:layout_gravity="left|start"
        android:background="#ffeeeeee"/>

</android.support.v4.widget.DrawerLayout>